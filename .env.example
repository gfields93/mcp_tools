# Oracle connection
ORACLE_USER=mcp_user
ORACLE_PASSWORD=changeme
ORACLE_DSN=localhost:1521/ORCL

# Connection pool sizing
POOL_MIN=1
POOL_MAX=10

# Result set safety ceiling (callers cannot exceed this)
HARD_MAX_ROWS=2000

# Audit file log path (rotates daily, 30-day retention)
AUDIT_LOG_PATH=audit.log

# Environment controls parameter masking in audit logs.
# Lower envs (local, dev, sit) log params verbatim.
# Upper envs (uat, prod) mask sensitive parameter values.
# Valid values: local | dev | sit | uat | prod
ENVIRONMENT=local
